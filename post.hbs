{{!-- Layout --}}
{{!< default}}

{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}is-article{{/contentFor}}

{{#post}}

{{#contentFor "simply_default_post"}}
    {{!-- Article Header - paertials/article/article-header.hbs --}}
    {{> "article/article-header"}}

    {{#if feature_image}}
        <figure class="post-image u-block u-marginAuto u-sizeFullHeight u-sizeFullWidth u-maxWidth1100">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 400px) 300px,(max-width: 730px) 600px, (max-width: 1600px) 100vw"
                src="{{img_url feature_image size="xl"}}"
                alt="{{title}}"
                class="u-block u-marginAuto post-zoom-img"
            />
        </figure>
    {{/if}}
{{/contentFor}}

{{/post}}

{{!-- Article --}}
{{> "article/article"}}
